<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AIProject.howstoday">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.AIProject.howstoday.DetailActivity"></activity>
        <activity
            android:name="com.AIProject.howstoday.UpLoadActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="com.AIProject.howstoday.SignupActivity" />
        <activity android:name="com.AIProject.howstoday.LoginActivity" />
        <activity android:name="com.AIProject.howstoday.UserBoardActivity" />
        <activity
            android:name="com.AIProject.howstoday.LoadingActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="com.AIProject.howstoday.ResultActivity" />
        <activity android:name="com.AIProject.howstoday.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.AIProject.howstoday.AcceptIMGActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
    </application>

</manifest>